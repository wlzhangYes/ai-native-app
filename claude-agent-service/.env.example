# Application Settings
APP_NAME=Claude Agent Service
APP_VERSION=0.1.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Claude API Configuration
ANTHROPIC_BEDROCK_BASE_URL=https://ai-router.anker-in.com/bedrock
CLAUDE_CODE_SKIP_BEDROCK_AUTH=1
CLAUDE_CODE_USE_BEDROCK=1
ANTHROPIC_AUTH_TOKEN=your_token_here
ANTHROPIC_SMALL_FAST_MODEL=global.anthropic.claude-haiku-4-5-20251001-v1:0
ANTHROPIC_MODEL=global.anthropic.claude-sonnet-4-5-20250929-v1:0

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=claude_agent
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=claude_agent_db

# Redis Configuration (no password by default)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Service Configuration
WORKSPACE_ROOT=/workspace
MAX_SESSIONS=100
SESSION_TIMEOUT=3600

# Frontend Configuration (runtime configurable)
NEXT_PUBLIC_API_URL=http://172.16.18.184:8000
